@model HaliSaha.Models.IndexViewModel

@{
    ViewBag.Title = "Yönet";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Hesap ayarlarınızı değiştirin</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Parola:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Parolanızı değiştirin", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Oluştur", "SetPassword")
            }
            ]
        </dd>
        <dt>Rezervasyonlarınız için:</dt>
        <dd> @Html.ActionLink("[Tıklayın]","Profilim", "Rezervasyon")</dd>
        
    </dl>
</div>
