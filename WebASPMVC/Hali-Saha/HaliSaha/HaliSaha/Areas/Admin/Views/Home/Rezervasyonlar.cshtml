@model IEnumerable<HaliSaha.Areas.Admin.Models.Rezervasyon>

@{
    ViewBag.Title = "Rezervasyonlar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container body">
    <div class="right_col" role="main">
        <div class="">

            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>
                                <h2>Rezervasyonlar</h2>

                               <small>




                                </small>
                            </h2>

                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">


                            <!-- Div İçerik Başlangıç -->

                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>

                                        <th style="width:40px;">Rezervasyon No</th>
                                        <th>Ad Soyad</th>
                                        <th>Telefon</th>
                                        <th>Tarih</th>
                                        <th>Saat</th>


                                    </tr>
                                </thead>
                                <tbody>


                                    @if (Model != null)
                                    {


                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RezervasyonID)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.adsoyad)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.telefon)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tarih.Day)
                                                    .
                                                    @Html.DisplayFor(modelItem => item.tarih.Month)
                                                    .
                                                    @Html.DisplayFor(modelItem => item.tarih.Year)


                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.saat)
                                                </td>

                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>

                            <!-- Div İçerik Bitişi -->


                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>