@model HaliSaha.Areas.Admin.Models.Saatler

@{
    ViewBag.Title = "SaatEkle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


 

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container body">
            <div class="right_col" role="main">
                <div class="">

                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>
                                       Saat Ekle

                                       
                                    </h2>

                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">


                                    <!-- Div İçerik Başlangıç -->
                                            <div class="form-horizontal">
                    <h4>Saatler</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Eklenecek Saat", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.saat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.saat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ekle" class="btn btn-info" />
                        </div>
                    </div>
                </div>
                                   
                                    <!-- Div İçerik Bitişi -->


                                </div>
                            </div>
                        </div>
                    </div>




                </div>
            </div>
        </div>
        
    }


